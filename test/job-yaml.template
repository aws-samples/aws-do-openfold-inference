---
kind: Job
apiVersion: batch/v1
metadata:
  name: ${instance_name}
  namespace: ${test_namespace}
  labels:
    app: ${instance_name}
spec:
  backoffLimit: 4
  template:
    metadata:
      labels:
        app: ${instance_name}
    spec:
      nodeSelector:
        beta.kubernetes.io/instance-type: "${test_instance_type}"
      restartPolicy: Never
      containers:
      - name: main
        image: "999701187340.dkr.ecr.us-west-2.amazonaws.com/test-openfold"
        command: ["bash","-c","${cmd_pod}"]
        imagePullPolicy: Always
        resources:
          limits:
            cpu: 1
